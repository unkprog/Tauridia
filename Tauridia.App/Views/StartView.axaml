<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tauridia.App.Views.StartView">

  <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto">
    <TextBlock Grid.ColumnSpan="2" Text="Начало работы" />

    <Button Grid.Row="1" Content="Открытие проекта" Width="200" Height="50" />
    <Button Grid.Row="1" Content="Создание проекта" Width="200" Height="50" />
  </Grid>
</UserControl>
