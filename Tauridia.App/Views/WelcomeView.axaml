<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Tauridia.App.ViewModels.WelcomeSreen;assembly=Tauridia.App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:Tauridia.App.Views;assembly=Tauridia.App"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tauridia.App.Views.WelcomeView">
  <Grid ColumnDefinitions="50,*,50" RowDefinitions="50, *, 50">

    <StackPanel Orientation="Vertical" Grid.Column="2" Margin="5">
      <Button Margin="5" Command="{Binding SettingsCommand}" Width="50" Height="50">
        <Image Source="resm:Tauridia.App.Core.Assets.Icons.Png.settings.png?assembly=Tauridia.App.Core"/>
      </Button>
      <Button  Margin="5 0 5 5" Command="{Binding AboutCommand}" Width="50" Height="50">
        <Image Source="resm:Tauridia.App.Core.Assets.Icons.Png.help.png?assembly=Tauridia.App.Core"/>
      </Button>
    </StackPanel>
    <HeaderedContentControl Grid.Row="1" Grid.Column="1" Header="Test" Background="Red">
        <ListBox Items="{Binding ListServers, Mode=OneWay}" ItemTemplate="{StaticResource ConnectionServerItemTemplate}" SelectedItem="{Binding SelectedConnectionServer, Mode=TwoWay}"/>
    </HeaderedContentControl>
  </Grid>
</UserControl>
