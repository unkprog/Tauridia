<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tauridia.App.Views.TitledView"
             x:Name="ucTitledView">
  <Grid RowDefinitions="Auto,*">
    <Border Padding="5" Margin="0 0 0 5" Background="Silver">
      <Grid ColumnDefinitions="*,Auto, Auto">
        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" FontSize="22"  />
        <Button Grid.Column="1" Command="{Binding SaveCommand}">
          <Image Source="resm:Tauridia.App.Core.Assets.Icons.Png.check.png?assembly=Tauridia.App.Core"/>
        </Button>
        <Button Grid.Column="2" Command="{Binding CancelCommand}" Margin="5 0">
          <Image Source="resm:Tauridia.App.Core.Assets.Icons.Png.close.png?assembly=Tauridia.App.Core"/>
        </Button>
      </Grid>
    </Border>
    <ContentControl Content="{Binding Content}"/>
  </Grid>
</UserControl>
