<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       >

  <Style.Resources>
    <Color x:Key="ThemeColorTitledControlHeader">#FF1E9DBF</Color>
    <Color x:Key="ThemeColorBorder">Gray</Color>

    <SolidColorBrush x:Key="ThemeBrushTitledControlHeader" Color="{DynamicResource ThemeColorTitledControlHeader}"></SolidColorBrush>
    <SolidColorBrush x:Key="ThemeBrushBorder" Color="{DynamicResource ThemeColorBorder}"></SolidColorBrush>

  </Style.Resources>
</Style>
